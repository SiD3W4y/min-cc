; Data can be defined anywhere, at the top of the file

str hello_world "Hello World !"
num size 14

fn exit
	mov $A 0x02		; syscall exit
	mov $B 0x00		; exit code
	sys

fn main
	mov $A 0x00		; syscall write number 
	mov $B 0x00		; file descriptor
	mov $C #hello_world	; str address into A
	ldr $D #size		; str size into B
	sys			; syscall write
	jmp exit

; Or at the bottom for example
str useless_string "Hey it's me, useless !"
